---
import TagPill from "@components/TagPill.astro";

const { cover, dateNote, slug, tags, title } = Astro.props;
---

<article class="card-note">
  <a href={slug}>
    <figure aria-hidden="true" class="card-figure">
      <img src={cover} />
    </figure>
    <div class="card-content">
      {
        tags?.length > 0 && (
          <div class="card-tags">
            {tags.map((tag: string) => (
              <TagPill>{tag}</TagPill>
            ))}
          </div>
        )
      }
      <div>
        <p class="card-date">{dateNote}</p>
        <p class="card-title">
          {title}
        </p>
      </div>
    </div>
  </a>
</article>

<style lang="scss">
  .card-content {
    grid-area: all;
    padding-block: 24px;
    padding-inline: 24px;
    align-content: flex-end;
    position: relative;
    z-index: 1;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.5) 50%
    );

    &:has(.card-tags) {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
  }

  .card-figure {
    aspect-ratio: 1;
    grid-area: all;
    max-width: none;
    width: 100%;
    max-height: 352px;
    height: 100%;
    border-radius: 4px;
    position: relative;
    z-index: 0;
    overflow: hidden;

    img {
      display: block;
      object-fit: cover;
      object-position: top;
      width: 100%;
      height: 100%;
      transition: scale 0.3s ease;
    }
  }

  .card-note {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto;
    grid-template-areas: "all";
    gap: 0px;
    border-radius: 4px;
    overflow: hidden;

    &:not(:first-of-type) {
      background: var(--color-grey-light-50);
    }

    &:first-of-type {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      grid-template-areas: "all";

      @include container-desktop {
        grid-area: first;
      }

      .card-content {
        padding-block: 24px;
        padding-inline: 24px;
        align-content: flex-end;
        position: relative;
        z-index: 1;
        background: linear-gradient(
          180deg,
          rgba(0, 0, 0, 0) 0%,
          rgba(0, 0, 0, 0.5) 50%
        );
      }

      .card-title {
        --card-note-title: clamp(1.75rem, 3vw, 2rem);
      }
    }

    &:nth-child(n + 4) {
      @include container-desktop {
        grid-column: 1 / -1;
      }
    }

    &:hover {
      .card-figure {
        img {
          scale: 1.025;
        }
      }
    }

    a {
      display: contents;
      color: var(--color-yellow-grey-100);
    }
  }

  .card-tags {
    --tag-pull-border-radius: 4px;
    --tag-pull-font-size: 1rem;
  }

  .card-title {
    font-size: var(--card-note-title, clamp(1.5rem, 2.5vw, 1.75rem));
    font-weight: 700;
  }
</style>
