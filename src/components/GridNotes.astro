---
const { page } = Astro.props;

const PageType = page || null;
---

<div class="grid-notes" data-ui-page-type={PageType}>
  <slot />
</div>

<style lang="scss">
  .grid-notes {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-flow: row;
    grid-auto-rows: auto;
    gap: 24px 0px;

    @include container-desktop {
      grid-template-columns: repeat(2, calc(30% - 24px)) auto;
      grid-template-areas:
        "first first ."
        ". . .";
      gap: 24px 24px;
    }

    &[data-ui-page-type="home"] {
      @include container-desktop {
        grid-template-columns: repeat(2, calc(30% - 24px)) auto;
        grid-template-areas: "first first .";
      }
    }

    &[data-ui-page-type="read"] {
      @include container-desktop {
        grid-template-columns: repeat(2, calc(50% - 24px));
        grid-template-areas: "first .";
      }
    }
  }
</style>
